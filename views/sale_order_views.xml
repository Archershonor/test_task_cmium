<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_views_form_inherited_test_tasks" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherited.test_tasks</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='partner_details']" position="inside">
                <field name="operator_id"/>
            </xpath>
            <xpath expr="//group[@name='partner_details']" position="inside">
                <field name="delivery_partner_id"/>
            </xpath>
            <xpath expr="//group[@name='partner_details']" position="inside">
                <field name="lead_source"/>
            </xpath>
            <xpath expr="//group[@name='partner_details']" position="inside">
                <field name="communication_channel"/>
            </xpath>
            <xpath expr="//group[@name='partner_details']" position="inside">
                <field name="paid_invoices_amount"/>
            </xpath>
        </field>

    </record>
</odoo>